#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
OPT_DIR=$(cd "$BIN_DIR/../usr"; pwd)

LUA=vlc

cd $BUILD_DIR

mkdir -p bin
#mkdir -p packages
mkdir -p etc
mkdir -p usr
mkdir -p lib
mkdir -p share
mkdir -p usr/share

echo "-----> Copying vlc to bin"
cp "$OPT_DIR/vlc" "bin/"

echo "-----> Installing packages"

#SITE_CONFIG="$OPT_DIR/luarocks/luarocks/site_config.lua"

if [ "$ENV" != "local" ]; then
	cp "$OPT_DIR/lib" " /lib/"
	cp "$OPT_DIR/share" " /usr/share"
  #export PATH=$OPT_DIR/$STACK:$PATH
  #echo "site_config.LUA_INCDIR=[[$OPT_DIR/../include]]" >> $SITE_CONFIG
  #echo "site_config.LUA_LIBDIR=[[$OPT_DIR/../lib/$STACK/]]" >> $SITE_CONFIG
else
  LUA=vlc
fi

