#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
OPT_DIR=$(cd "$BIN_DIR/../usr"; pwd)

LUA=vlc

cd $BUILD_DIR

#mkdir -p bin
#mkdir -p packages
mkdir -p etc
mkdir -p usr/bin
mkdir -p usr/lib
#mkdir -p share
mkdir -p usr/share

echo "-----> Copying vlc to bin"
cp "$OPT_DIR/bin/vlc" "usr/bin/"

echo "-----> Installing packages"

if [ "$ENV" != "local" ]; then
	cp -r "$OPT_DIR/lib/" "usr/lib/"
	cp -r "$OPT_DIR/share" "usr/share/"

fi

