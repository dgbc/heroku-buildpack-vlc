#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail
#set -x #debug

BUILD_DIR=$1
CACHE_DIR=$2
env_dir=$3

unset GIT_DIR

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
FILENAME="vlc-linux-x64.zip"
url="https://s3.amazonaws.com/vlc-buildpack/vlc-linux-x64.zip"
cd $CACHE_DIR
curl $url -s -o $FILENAME
unzip -o -q $FILENAME

cd $BUILD_DIR

mkdir -p bin
mkdir -p usr/lib
mkdir -p usr/share

echo "-----> Copying vlc to bin"
cp "$CACHE_DIR/usr/bin/vlc" "bin/"

echo "-----> Installing packages"

cp -r "$CACHE_DIR/usr/lib/" "usr/lib/"
cp -r "$CACHE_DIR/usr/share/" "usr/share/"

PROFILE_PATH="$BUILD_DIR/.profile.d/vlc.sh"
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:usr/lib/lib"' >> $PROFILE_PATH
#rm -rf $CACHE_DIR/*
